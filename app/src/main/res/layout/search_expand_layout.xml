<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentBlack"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/actionbar_padding_left" >

            <EditText
                android:id="@+id/search_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/edittext_underline"
                android:drawableLeft="@drawable/search_icon_nocircle"
                android:drawablePadding="@dimen/actionbar_drawable_edittext_padding"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/destination_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/edittext_underline"
                android:drawableLeft="@drawable/navigation_icon_nocircle"
                android:drawablePadding="@dimen/actionbar_drawable_edittext_padding"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/submit_button"
            android:layout_width="@dimen/submit_button_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/yellow"
            android:scaleType="fitCenter"
            android:src="@drawable/flag_icon" />

    </LinearLayout>

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>