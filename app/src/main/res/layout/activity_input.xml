<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InputActivity"
    android:clickable="false">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_big_white"
        android:adjustViewBounds="true"
        android:layout_above="@+id/middle_location"
        android:layout_margin="25dp"
        android:layout_marginBottom="200dp"/>

    <EditText android:id="@+id/middle_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/middle_location"
        android:inputType="text"
        android:layout_above="@+id/start_location"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="2.5dp" />

    <EditText android:id="@+id/start_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/current_location"
        android:inputType="text"
        android:layout_above="@+id/destination"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="2.5dp" />

    <EditText android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/destination"
        android:layout_above="@+id/submit_button"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:imeOptions="actionSend"
        android:layout_margin="5dp" />

    <Button android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/login_button"
        android:textSize="20dp"
        android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>
